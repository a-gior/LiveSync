{
  "name": "livesync",
  "displayName": "LiveSync",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "livesync.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "livesync.configuration",
        "title": "LiveSync: Configuration"
      },
      {
        "command": "livesync.showHelloWorld",
        "title": "LiveSync: Show Hello World (Svelte)"
      }
    ],
    "configuration": {
      "title": "LiveSync",
      "properties": {
        "LiveSync.hostname": {
          "type": "string",
          "default": "",
          "description": "Hostname for LiveSync configuration."
        },
        "LiveSync.port": {
          "type": "number",
          "default": 8080,
          "description": "Port number for LiveSync configuration."
        },
        "LiveSync.username": {
          "type": "string",
          "default": "",
          "description": "Username for LiveSync configuration."
        },
        "LiveSync.authMethod": {
          "type": "string",
          "default": "password",
          "description": "authMethod for LiveSync configuration."
        },
        "LiveSync.password": {
          "type": "string",
          "default": "",
          "description": "Password for LiveSync configuration."
        },
        "LiveSync.sshKey": {
          "type": "string",
          "default": "",
          "description": "SSH key for LiveSync configuration."
        }
      }
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run dev",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",

    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    
    "@types/ssh2": "^1.15.0",
    "@types/ssh2-sftp-client": "^9.0.3"
  },
  "dependencies": {
    "ssh2": "^1.15.0",
    "ssh2-sftp-client": "^10.0.3"
  }
}
